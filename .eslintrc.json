{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "eqeqeq": [
            "error",
            "always"
        ],
        "max-depth": [
            "error",
            { "max": 4}
        ],
        "max-len": [
            "error",
            { "code": 80 }
        ],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"comma-dangle": ["error", {
        "arrays": "always",
        "objects": "always",
        "imports": "always",
        "exports": "always"
    }]
    }
}
